{% extends 'base.html.twig' %}

{% block body %}
<!-- Posts Table -->
	<section class="wrapper style1 align-center">
		<div class="inner">
			<h2>Vos Pages</h2>
			<p>Finally, here are some additional elements you <em>might</em> find useful (and yup, they look fine with any <span class="demo-controls">appearance</span>).</p>
			<div class="index align-left">

			<!-- Form -->
				<section>
					<header>
						<h3>Article</h3>
					</header>
					<div class="content">

						{% if error %}
						    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
						{% endif %}

						<form action="{{ path('login') }}" method="post">
							<div class="field">
								<label for="username">Username:</label>
								<input type="text" id="username" name="_username" value="{{ last_username }}" />
							</div>
						    <div class="field">
						    	<label for="password">Password:</label>
						    	<input type="password" id="password" name="_password" />
						    </div>
						    {#
						        If you want to control the URL the user
						        is redirected to on success (more details below)
						    #}
							<input type="hidden" name="_target_path" value="/account" />
							<ul class="actions">
								<li>
									<button type="submit">login</button>
									<!-- <input type="submit" name="submit" id="submit" value="Send Message" /> -->
								</li>
							</ul>
						    
						</form>

					</div>
				</section>

			</div>
		</div>
	</section>
<!-- Actions -->
	<section class="spotlight style1 orient-right content-align-center image-position-center onscroll-image-fade-in" id="first">
		<div class="content">
			<ul class="actions vertical">
				<li><a href="{{ path('admin_homepage') }}" class="button">Back to home</a></li>
			</ul>
		</div>
	</section>

	
{% endblock %}